{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ .UserName }}@{{ .HostName }} ",
          "foreground": "#73daca",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "command": "pwd | sed \"s|$HOME|~|\"",
            "shell": "zsh"
          },
          "foreground": "#a9b1d6",
          "type": "command",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          },
          "template": " \u23f3 {{ .CurrentDate | date .Format }} ",
          "foreground": "#8b3030",
          "type": "time",
          "style": "diamond"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "command": "if [ $(git rev-parse --is-inside-work-tree 2>/dev/null) ]; then git branch --no-color --show-current; else true; fi",
            "shell": "zsh"
          },
          "template": "\ue709 {{ .Output }}",
          "foreground": "#ffffff",
          "type": "command",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "foreground": "#6CA35E",
          "powerline_symbol": "\ue0b0",
          "type": "node",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "‚ùØ ",
          "foreground": "#9d7cd8",
          "type": "exit",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff007c{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
