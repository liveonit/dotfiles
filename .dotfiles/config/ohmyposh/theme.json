{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#73daca",
          "style": "plain",
          "template": "{{ .UserName }}@{{ .HostName }} ",
          "type": "session"
        },
        {
          "foreground": "#a9b1d6",
          "properties": {
            "command": "pwd | sed \"s|$HOME|~|\"",
            "shell": "zsh"
          },
          "style": "plain",
          "type": "command"
        },
        {
          "foreground": "#8b3030",
          "properties": {
            "time_format": "15:04"
          },
          "style": "diamond",
          "template": " \u23F3 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffffff",
          "properties": {
            "command": "if [ $(git rev-parse --is-inside-work-tree 2>/dev/null) ]; then git branch --no-color --show-current; else true; fi",
            "shell": "zsh"
          },
          "style": "plain",
          "template": "\ue709 {{ .Output }}",
          "type": "command"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#6CA35E",
          "powerline_symbol": "\ue0b0",
          "style": "plain",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#7dcfff",
          "properties": {
            "command": "dotenv -f ~/.config/ohmyposh/.env get OHMYPOSH_KUBERNETES_CONTEXT",
            "shell": "zsh",
            "tenplate": "{{ .Output }}"
          },
          "style": "plain",
          "type": "command"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#9d7cd8",
          "foreground_templates": ["{{ if gt .Code 0 }}#ff007c{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "version": 2
}
